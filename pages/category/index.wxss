/* 固定头部搜索栏 */
/* 固定了continer高度为100% */
.continer{
  position: absolute;
  width: 100%;
  top: 100rpx;
  bottom: 0;
 
}

/* 搜索框 */
.search {
  padding: 20rpx;
  background: #ff2d4a;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing:border-box;
  z-index: 99;
}

.search-input {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.search-input icon {
  margin-right: 10px;
}

/*左侧带单栏  */
/* 继承了continer高度，设置了定位为相对定位 */
.main{
  display: flex;
  justify-content: space-between;
  height: 100%;
  position: relative;
}

.navs{
  position: absolute;
  left: 0;
  top: 0;
  width: 200rpx;
  height: 100%;
  overflow: scroll;
  background: #f6f6f6;
}

.navs-item{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 1px #eee solid;
}

.navs .active{
  color: red;
  background: #fff;
  position: relative;
}

.navs .active::before{
  display: block;
  content: "";
  width: 4px;
  height: 60rpx;
  background: red;
  position: absolute;
  top: 20rpx;
  left: 0;
}

/* 右边品牌栏 */
.categorys{
  position: absolute;
  left: 200rpx;
  right: 0;
  height: 100%;
  overflow: scroll;
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.categorys-title{
  text-align: center;
  margin-bottom: 20rpx
}

.categorys-title text{
  margin: 0 20rpx;
  color:#eee;
}

.categorys-list{
  display: flex;
  flex-wrap: wrap;
}

.categorys-item{
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  margin-bottom: 10rpx;
  color: #000;

}

.categorys-item image{
  width: 120rpx;
  height: 120rpx;
}