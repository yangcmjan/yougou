<view class="continer">

  <!-- 搜索 -->
  <view class="search">
    <view class="search-input">
      <icon type="search" size="16" />搜索</view>
  </view>


  <!-- 分类页的内容 -->
  <view class="main">
    <!-- 左侧菜单栏 -->
    <view class="navs">

      <view class="navs-item {{index === current ? 'active':''}}" wx:for="{{navs}}" wx:key="{{index}}" bindtap="handleChange" data-index="{{index}}">{{item}}</view>
    </view>

    <!-- 品牌列表，点击时候切换数据 -->
    <view class="categorys">
      <view class="categorys-row">
      <!-- 标题 -->
        <view class="categorys-title"><text>/</text> 电视 <text>/</text></view>
      </view>

      <!-- 品牌列表 -->
      <view class="categorys-list">
      <view class="categorys-item" wx:for="{{[1,1,1,1,1,1]}}" >
      <image src="https://img.alicdn.com/i2/2/TB12cBSirGYBuNjy0FoXXciBFXa?abtest=&pos=7&abbucket=&acm=03014.1003.1.765824&scm=1007.13143.56636.100200300000000_90x90q90.jpg"></image>
      <view>英雄联盟</view>
      </view>
      </view>
    </view>

  </view>


</view>