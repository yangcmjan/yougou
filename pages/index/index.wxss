/* 搜索框 */

.search {
  padding: 20rpx;
  background: #ff2d4a;
}

.search-input {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 4px;
  font-size: 14px;
  color: #666;
}

.search-input icon {
  margin-right: 10px;
}

/* 轮播图 */
.slide-image{
  width: 750rpx;
  height: 340rpx;
}

.menus{
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.menus image{
  width: 128rpx;
  height: 140rpx
}